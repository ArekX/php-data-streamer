{
    "name": "arekxv/php-data-streamer",
    "type": "library",
    "license": "Apache-2",
    "autoload": {
        "psr-4": {
            "ArekX\\DataStreamer\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Aleksandar",
            "email": "arekusanda1@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "suggest": {
        "ext-redis": "To use the native PHP extension Redis driver.",
        "predis/predis": "To use the pure PHP redis driver."
    },
    "scripts": {
        "test": "php vendor/bin/codecept run",
        "coverage": "php vendor/bin/codecept --coverage-html coverage --whitelist src",
        "coverage-clover": "php vendor/bin/codecept --coverage-clover coverage.xml --whitelist src"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.3",
        "codeception/verify": "^2.1"
    }
}
